<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<joined-subclass extends="dao.Fahrzeug" name="dao.Fahrrad" table="FAHRRAD">
		<key column="FAHRRAD_ID" />
		<property name="durchmesser" type="double" column="DURCHMESSER"/>
		<property name="name" type="string" column="FAHRRAD_NAME"/>
	</joined-subclass>

</hibernate-mapping>